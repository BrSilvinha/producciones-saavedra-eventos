{
  "name": "producciones-saavedra-monorepo",
  "version": "1.0.0",
  "description": "Sistema de Gestión de Eventos con QR - Producciones Saavedra",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm run dev",
    "build": "npm run install:backend && npm run install:frontend && npm run build:frontend",
    "start": "node backend/src/server.js",
    "railway:build": "npm run build",
    "railway:start": "npm run start",
    "install:backend": "cd backend && npm ci --only=production --silent",
    "install:frontend": "cd frontend && npm ci --silent",
    "build:frontend": "cd frontend && npm run build && npm prune --production --silent",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "health": "curl -f http://localhost:5000/api/health || exit 1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "eventos",
    "qr", 
    "tickets",
    "gestión",
    "producciones",
    "saavedra"
  ],
  "author": "Producciones Saavedra",
  "license": "MIT"
}